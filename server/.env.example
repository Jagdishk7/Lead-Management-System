NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/formdb

# Seed a super admin user (run scripts/seed-superadmin.js)
SEED_SUPERADMIN_EMAIL=superadmin@example.com
SEED_SUPERADMIN_PASSWORD=abcd@1234
SEED_SUPERADMIN_NAME=Super Admin

# Session
SESSION_SECRET=please-change-this-secret
SESSION_TTL_SECONDS=3600
SESSION_COOKIE_NAME=session
# COOKIE_SECURE=true         # force 'Secure' even if not production
# COOKIE_SAMESITE=lax        # 'lax' | 'strict' | 'none'

# CORS origins (for admin UI), comma-separated
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT configuration
ACCESS_TOKEN_SECRET=change-this-access-secret
REFRESH_TOKEN_SECRET=change-this-refresh-secret
ACCESS_TOKEN_TTL_SECONDS=900      # 15 minutes
REFRESH_TOKEN_TTL_SECONDS=86400   # 24 hours when not remembered
REFRESH_TOKEN_REMEMBER_TTL_SECONDS=604800  # 7 days when 'Remember this device' is checked (set 2592000 for 30 days)
ACCESS_COOKIE_NAME=access_token
REFRESH_COOKIE_NAME=refresh_token
